<%- include("../partials/header.ejs") %>
    <%- include("../partials/sidebaradmin") %>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    <h3 class="mt-4"> Dashboard</h1>
                        <hr/>


                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Add Worker
                      </button>


                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Add Worker</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action='/admin/worker' method='POST'>
                                            <div class="form-group row">
                                                <label for="inputName" class="col-sm-2 col-form-label">Names</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="inputName" name='worker[name]' placeholder='Enter your name'>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputphoneno" class="col-sm-2 col-form-label">Mobile Number</label>
                                                <div class="col-sm-10">
                                                    <input type="number" class="form-control" id="inputphoneno" name='worker[phoneno]' placeholder='Enter your mobile number'>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="inputProffession" class="col-sm-2 col-form-label">Proffession</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="inputProffession" name='worker[proffession]' placeholder='Your proffession'>
                                                </div>
                                            </div>
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary">ADD</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row m-4">

                            <% worker.forEach(function(requ){ %>

                                <div class="card m-2" style="width: 14rem;">
                                    <div class="card-body">
                                        <h3 class="card-title" style="color: black;">Worker</h3>
                                        <p class="card-text">Name:
                                            <%= requ.name %>
                                        </p>
                                        <p class="card-text">Phone:
                                            <%= requ.phoneno%>
                                        </p>
                                        <p class="card-text">Proffession:
                                            <%= requ.proffession %>
                                        </p>
                                        <div class="row"><a href="/admin/worker/<%=requ._id%>/edit" class="btn btn-secondary m-1">EDIT</a>
                                            <form id='delete' action='/admin/worker/<%=requ._id%>?_method=DELETE' method='POST'>
                                                <button class='btn btn-danger m-1'> DELETE </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>

                </div>

        </div>
        </main>
        <%- include("../partials/footer") %>